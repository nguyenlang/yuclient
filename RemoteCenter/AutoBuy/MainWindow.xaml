<Window x:Class="AutoBuy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBuy"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Closed="Window_Closed">
    <Window.Resources>
        <local:StatusToColor x:Key="StatusToColor"/>
        <local:StatusToText x:Key="StatusToText"/>
    </Window.Resources>
    <Grid Margin="0,0,0,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0.2,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Height="25" Margin="0 5">
                <Label Content="Name:"/>
                <TextBox x:Name="txtName" Width="100" Height="23"
                     VerticalContentAlignment="Center" Margin="5 0"/>
                <Label Content="UId:"/>
                <TextBox x:Name="txtFindAsin" Width="100" Height="23"
                         VerticalContentAlignment="Center" Margin="15 0"/>
                <Label Content="MaxPrice:"/>
                <TextBox x:Name="txtLimitPrice" Width="45" Height="23"
                     VerticalContentAlignment="Center"/>
                <Label Content="BuyLimit:"/>
                <TextBox x:Name="txtBuyLimit" Width="30" Height="23" VerticalContentAlignment="Center"
                           Text="1" HorizontalContentAlignment="Center"/>
                <Button x:Name="Add" Content="Add"
                        Width="60" Height="24" Margin="5 0"
                        Click="AddAsin"
                        VerticalAlignment="Center"/>
                <Button x:Name="saveList" Content="SaveList"
                        Margin="5 0"
                        Padding="5"
                        VerticalAlignment="Center"
                        Click="saveList_Click"/>
                <Button x:Name="loadList" Content="LoadList"
                        Margin="5 0"
                        Padding="5"
                        VerticalAlignment="Center"
                        Click="loadList_Click"/>
                <Button x:Name="SettingBrowser"
                        Content="SettingBrowser"
                        Margin="5 0"
                        Click="SettingBrowser_Click"
                        VerticalAlignment="Center"/>
            </StackPanel>
            <Grid Grid.Row="2" Margin="5 0" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="261*"/>
                    <ColumnDefinition Width="262*"/>
                    <ColumnDefinition Width="69*"/>
                    <ColumnDefinition Width="192*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="IsAmazon"
                                 VerticalAlignment="Center"
                                 Content="AMAZON"
                                 FontWeight="Bold"
                                 Grid.Column="0"
                                 HorizontalAlignment="Center"
                                 IsChecked="True" Margin="94,8,93.8,7"
                              />
                <CheckBox x:Name="IsNewEgg"
                                 VerticalAlignment="Center"
                                 Content="NEWEGG"
                                 FontWeight="Bold"
                                 Grid.Column="1"
                                 HorizontalAlignment="Center"
                                 IsChecked="False"
                                 IsEnabled="False" Margin="95.2,8,95.4,7"
                              />
                <CheckBox x:Name="IsBestBuy"
                                 VerticalAlignment="Center"
                                 Content="BestBuy"
                                 FontWeight="Bold"
                                 Grid.Column="3"
                                 HorizontalAlignment="Center"
                                 IsChecked="False"
                                 IsEnabled="False" Margin="29.413,8,99,7"
                              />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Amazon">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="1" x:Name="ListAsin"
                      ItemsSource="{Binding AsinList}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Status" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToText}}"
                                               Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                               HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Max($)" Width="40" DisplayMemberBinding="{Binding MaxPrice}">
                            </GridViewColumn>
                            <GridViewColumn Header="Price" Width="40" DisplayMemberBinding="{Binding Price}">
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Remove" 
                                  Click="MenuItem_Remove"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
                <ListView x:Name="LogList" 
                      Grid.Row="2"
                      ItemsSource="{Binding Logs}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ClearAll" 
                                  Click="ClearAllLogs"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </Grid>
            <Grid x:Name="NewEggs" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" x:Name="ListNeId"
                      ItemsSource="{Binding NeIdList}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Status" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToText}}"
                                               Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                               HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Max($)" Width="40" DisplayMemberBinding="{Binding MaxPrice}">
                            </GridViewColumn>
                            <GridViewColumn Header="Price" Width="40" DisplayMemberBinding="{Binding Price}">
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Remove" 
                                  Click="MenuItem_Remove"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
                <ListView x:Name="NeLogList" 
                      Grid.Row="1"
                      ItemsSource="{Binding NeLogs}"></ListView>
            </Grid>
            <Grid x:Name="BestBuy" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" x:Name="BestbuyId"
                      ItemsSource="{Binding BestbuyIdList}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Status" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToText}}"
                                               Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                               HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Max($)" Width="40" DisplayMemberBinding="{Binding MaxPrice}">
                            </GridViewColumn>
                            <GridViewColumn Header="Price" Width="40" DisplayMemberBinding="{Binding Price}">
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Remove" 
                                  Click="MenuItem_Remove"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
                <ListView x:Name="BestbuyLogs" 
                      Grid.Row="1"
                      ItemsSource="{Binding BestBuyLogs}"></ListView>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="TimeStam(ms)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtTimeStamp" 
                          VerticalAlignment="Center" Width="60" Height="25"
                         />
            <CheckBox x:Name="chkBoxHeadless" IsChecked="False"
                          VerticalAlignment="Center"
                            Margin="5"
                        IsEnabled="False"/>
            <Label Content="Headless" VerticalAlignment="Center"/>
            <Button x:Name="Start" Content="Start"
                          Width="40" Height="25"
                          HorizontalAlignment="Right"
                          Click="Start_Click"
                          Margin="5"/>
            <Button x:Name="Stop" Content="Stop"
                          Width="40" Height="25"
                          HorizontalAlignment="Right"
                          Click="Stop_Click"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
